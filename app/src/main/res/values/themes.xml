<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VITInsiderHostel" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_theme_green</item>
        <item name="colorPrimaryVariant">@color/medium_theme_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/tree_green</item>
        <item name="colorSecondaryVariant">@color/light_olive_green</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">@color/black</item>

    </style>

    <style name="SelectableItemTheme">
        <item name="colorControlHighlight">#E65F5F5F</item>
    </style>

    <style name="SelectableItemBackground">
        <item name="android:theme">@style/SelectableItemTheme</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="ForArrow">
        <item name="colorControlHighlight">#B3A7E07A</item>
    </style>

    <style name="ForArrowTheme">
        <item name="android:theme">@style/ForArrow</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="Avatar">
        <item name="colorControlHighlight">#E6C5C5C5</item>
    </style>

    <style name="AvatarTheme">
        <item name="android:theme">@style/Avatar</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="cancelBtn">
        <item name="colorControlHighlight">#E6FF7C7C</item>
    </style>

    <style name="cancelTheme">
        <item name="android:theme">@style/cancelBtn</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="SwitchCompatTheme">
        <item name="colorControlActivated">@color/medium_theme_green</item>
        <item name="colorControlHighlight">@color/quantum_grey</item>
    </style>

    <style name="SwitchCompatStyle">
        <item name="thumbTint">@color/switch_color</item>
        <item name="trackTint">@color/switch_color</item>
    </style>

</resources>