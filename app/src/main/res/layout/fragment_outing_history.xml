<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_fill_colour"
    android:orientation="vertical"
    android:id="@+id/outingHistoryFragment"
    tools:context=".fragments.OutingHistoryFragment">

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-light"
        android:paddingStart="10dp"
        android:text="@string/outing_history_pge_toolbar_title_lbl"
        android:textColor="@color/text_01"
        android:textSize="16sp"
        tools:ignore="RtlSymmetry" />

    <LinearLayout
        android:id="@+id/outingHistoryLoadingLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:fontFamily="sans-serif-light"
            android:paddingStart="10dp"
            android:text="@string/outing_history_pge_loading_lbl"
            android:textColor="@color/text_04"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/outingHistoryProgressBar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/outingHistoryEmptyLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/panda" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-light"
            android:gravity="center_horizontal"
            android:paddingStart="10dp"
            android:text="@string/outing_history_pge_no_tickets_lbl"
            android:textColor="@color/text_04"
            android:textSize="18sp"
            tools:ignore="RtlSymmetry" />


    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/outingHistoryRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical">


    </androidx.recyclerview.widget.RecyclerView>


</LinearLayout>