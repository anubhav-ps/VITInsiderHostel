<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/travelCompanionFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingStart="20dp"
    android:paddingTop="2dp"
    android:paddingEnd="16dp"
    android:paddingBottom="12dp"
    tools:context=".fragments.TravelCompanionHomeFragment">

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cabin_medium"
        android:gravity="start|center_vertical"
        android:text="Travelling Alone ?"
        android:textColor="@color/black"
        android:textSize="34sp"
        tools:ignore="RtlSymmetry">

    </com.google.android.material.textview.MaterialTextView>


    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/average_sans"
        android:gravity="start|center_vertical"
        android:text="Connect with VIT Students travelling in the same train or flight you are travelling"
        android:textColor="#363636"
        android:textSize="16sp"
        tools:ignore="RtlSymmetry">

    </com.google.android.material.textview.MaterialTextView>


    <RadioGroup
        android:id="@+id/travelPgeRadioGrp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="6dp"
        android:paddingBottom="6dp">

        <RadioButton
            android:id="@+id/travelPgeTrainRadioBtn"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginEnd="40dp"
            android:checked="true"
            android:background="@drawable/travel_radio_selector"
            android:button="@android:color/transparent"
            android:drawableStart="@drawable/ic_baseline_train_24"
            android:drawablePadding="10dp"
            android:elevation="4dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="Train"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/travelPgeFlightRadioBtn"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/travel_radio_selector"
            android:button="@android:color/transparent"
            android:drawableStart="@drawable/ic_baseline_flight_takeoff_24"
            android:drawablePadding="10dp"
            android:elevation="4dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="Flight"
            android:textColor="@color/black"
            android:textSize="16sp" />


    </RadioGroup>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:hint="Enter 10 digit PNR Number"
        android:textColorHint="#878787"
        app:boxStrokeColor="@color/black"
        app:endIconMode="clear_text"
        app:endIconTint="@color/black"
        app:endIconTintMode="src_atop"
        app:hintTextColor="@color/black">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/travelPgeTrainPnrNumberEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="10"
            android:textCursorDrawable="@color/black">

        </com.google.android.material.textfield.TextInputEditText>

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="18dp"
        android:hint="Enter 10 digit PNR Number"
        android:textColorHint="#878787"
        android:visibility="gone"
        app:boxStrokeColor="@color/black"
        app:endIconMode="clear_text"
        app:endIconTint="@color/black"
        app:endIconTintMode="src_atop"
        app:hintTextColor="@color/black">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:textCursorDrawable="@color/black"
            android:maxLength="10">

        </com.google.android.material.textfield.TextInputEditText>

    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="6dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="2dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/travelPgeSearchBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:elevation="4dp"
            android:text="Search"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:backgroundTint="@color/black"
            app:cornerRadius="8dp"
            app:rippleColor="@color/white">

        </com.google.android.material.button.MaterialButton>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/travelPgeExitNetworkBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:elevation="4dp"
            android:text="Exit Network"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:visibility="gone"
            app:backgroundTint="@color/black"
            app:cornerRadius="8dp"
            app:rippleColor="@color/white">

        </com.google.android.material.button.MaterialButton>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/travelPgeJoinNetworkBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:elevation="4dp"
            android:text="Join Network"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:visibility="gone"
            app:backgroundTint="@color/black"
            app:cornerRadius="8dp"
            app:rippleColor="@color/white">

        </com.google.android.material.button.MaterialButton>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/travelPgeCreateNJoinNetworkBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:elevation="4dp"
            android:text="Join Network"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:visibility="gone"
            app:backgroundTint="@color/black"
            app:cornerRadius="8dp"
            app:rippleColor="@color/white">

        </com.google.android.material.button.MaterialButton>

    </LinearLayout>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/travelPgeTrainNameTitleTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif"
        android:text="Train Name"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:visibility="gone" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/travelPgeTrainNameTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/average_sans"
        android:text="Chennai - Odisha"
        android:textColor="@color/text_01"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="gone">

    </com.google.android.material.textview.MaterialTextView>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/travelPgeMessageTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/average_sans"
        android:text="Yay ! 8 VIT Students are travelling in the same train during your travel time."
        android:textColor="@color/text_01"
        android:textSize="15sp"
        android:textStyle="bold"
        android:visibility="gone">

    </com.google.android.material.textview.MaterialTextView>

    <ProgressBar
        android:id="@+id/travelPgeProgressBar"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="1dp"
        android:backgroundTint="@color/black"
        android:visibility="gone">

    </ProgressBar>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/travelPgeRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        android:paddingTop="6dp"
        android:paddingBottom="6dp">

    </androidx.recyclerview.widget.RecyclerView>


</LinearLayout>


