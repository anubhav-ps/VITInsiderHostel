<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/inviteUser"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:clipToPadding="true"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="8dp"
    app:cardUseCompatPadding="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingTop="12dp"
        android:paddingEnd="16dp"
        android:paddingBottom="18dp">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/harmattan"
            android:gravity="center_horizontal"
            android:text="@string/invite_dialog_invite_txt"
            android:textColor="@color/medium_theme_green"
            android:textSize="34sp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/inviteUserMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/invite_dialog_content_txt"
            android:textColor="#E6626161"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp"
            android:elevation="2dp"
            android:padding="2dp"
            android:src="@drawable/av_100"
            app:elevation="2dp" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/inviteUserMailName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="@string/invite_dialog_mail_txt"
            android:textColor="#E6626161" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/inviteUserBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="18dp"
            android:backgroundTint="@color/medium_theme_green"
            android:text="@string/invite_dialog_btn_txt"
            android:textColor="@color/white" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>


