<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/accountFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_fill_colour"
    android:fadeScrollbars="false"
    android:orientation="vertical"
    android:paddingBottom="20dp"
    android:scrollIndicators="right"
    android:scrollbarFadeDuration="0"
    android:scrollbarSize="4dp"
    android:scrollbarThumbVertical="@android:color/darker_gray"
    android:scrollbars="vertical"
    android:verticalScrollbarPosition="right"
    tools:context=".fragments.AccountFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="4dp">

            <ImageView
                android:id="@+id/accountPgeAvatarIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:src="@drawable/av_100">

            </ImageView>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/accountPgeUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:text="@string/account_frag_username_txt"
                android:textColor="#E6626161"
                android:textStyle="bold" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/accountPgeUserMail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:text="@string/account_frag_user_mail_id"
                android:textColor="#E6626161" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:padding="4dp">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/duru_sans"
                android:gravity="center_vertical"
                android:paddingStart="14dp"
                android:text="@string/account_frag_account_settings_lbl"
                android:textColor="#E6626161"
                android:textSize="18sp"
                tools:ignore="RtlSymmetry" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/accountPgeViewUserProfile"
                style="@style/SelectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"
                android:focusable="true"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:padding="4dp"
                android:paddingStart="38dp"
                android:paddingEnd="16dp"
                android:text="@string/account_frag_user_profile_txt"
                android:textColor="#E6626161"
                android:textSize="14sp"
                tools:ignore="RtlSymmetry" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/accountPgeViewTicketHistory"
                style="@style/SelectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"
                android:focusable="true"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:padding="4dp"
                android:paddingStart="38dp"
                android:paddingEnd="16dp"
                android:text="@string/account_frag_ticket_history_txt"
                android:textColor="#E6626161"
                android:textSize="14sp"
                tools:ignore="RtlSymmetry" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/accountPgeNotificationSetting"
                style="@style/SelectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"
                android:focusable="true"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:padding="4dp"
                android:paddingStart="38dp"
                android:paddingEnd="16dp"
                android:text="@string/account_pge_notification_lbl"
                android:textColor="#E6626161"
                android:textSize="14sp"
                tools:ignore="RtlSymmetry" />


            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:fontFamily="@font/duru_sans"
                android:gravity="center_vertical"
                android:paddingStart="14dp"
                android:text="@string/account_pge_share_lbl"
                android:textColor="#E6626161"
                android:textSize="18sp"
                tools:ignore="RtlSymmetry" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/accountPgeViewShareApp"
                style="@style/SelectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"
                android:focusable="true"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:padding="4dp"
                android:paddingStart="38dp"
                android:paddingEnd="16dp"
                android:text="@string/account_frag_share_the_app_txt"
                android:textColor="#E6626161"
                android:textSize="14sp"
                tools:ignore="RtlSymmetry" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/accountPgeViewAbout"
                style="@style/SelectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"
                android:focusable="true"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:padding="4dp"
                android:paddingStart="38dp"
                android:paddingEnd="16dp"
                android:text="@string/account_frag_about_vit_insider_hostel_txt"
                android:textColor="#E6626161"
                android:textSize="14sp"
                tools:ignore="RtlSymmetry" />


            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:fontFamily="@font/duru_sans"
                android:gravity="center_vertical"
                android:paddingStart="14dp"
                android:text="@string/account_pge_feedback_lbl"
                android:textColor="#E6626161"
                android:textSize="18sp"
                tools:ignore="RtlSymmetry" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/accountPgeViewReportIssue"
                style="@style/SelectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"
                android:focusable="true"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:padding="4dp"
                android:paddingStart="38dp"
                android:paddingEnd="16dp"
                android:text="@string/account_pge_report_lbl"
                android:textColor="#E6626161"
                android:textSize="14sp"
                tools:ignore="RtlSymmetry" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/accountPgeViewSpottedBug"
                style="@style/SelectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"
                android:focusable="true"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:padding="4dp"
                android:paddingStart="38dp"
                android:paddingEnd="16dp"
                android:text="@string/account_pge_bug_lbl"
                android:textColor="#E6626161"
                android:textSize="14sp"
                tools:ignore="RtlSymmetry" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/accountPgeViewSuggestion"
                style="@style/SelectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"
                android:focusable="true"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:padding="4dp"
                android:paddingStart="38dp"
                android:paddingEnd="16dp"
                android:text="@string/account_pge_suggestion_lbl"
                android:textColor="#E6626161"
                android:textSize="14sp"
                tools:ignore="RtlSymmetry" />

        </LinearLayout>


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/accountPgeSignOut"
            style="@style/SelectableItemBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="sans-serif"
            android:padding="4dp"
            android:text="@string/account_frag_sign_out_txt"
            android:textColor="@color/tree_green"
            android:textSize="24sp"
            android:textStyle="bold" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/accountPgeAppVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="2dp"
            android:fontFamily="sans-serif"
            android:padding="2dp"
            android:text="@string/account_frag_version_code_txt"
            android:textColor="#E6626161" />


    </LinearLayout>


</ScrollView>
