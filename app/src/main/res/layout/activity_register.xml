<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/registerPge"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    tools:context=".activities.RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="80dp"
        android:orientation="vertical"
        android:paddingStart="32dp"
        android:paddingTop="8dp"
        android:paddingEnd="32dp"
        android:paddingBottom="8dp">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/harmattan"
            android:text="@string/register_pge_sign_up"
            android:textColor="@color/medium_theme_green"
            android:textSize="60sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:hint="@string/register_pge_name_hint"
            android:textColorHint="#878787"
            app:boxStrokeColor="@color/light_theme_green"
            app:endIconMode="clear_text"
            app:endIconTint="@color/light_theme_green"
            app:endIconTintMode="src_atop"
            app:hintTextColor="@color/light_theme_green">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/registerPgeNameTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:lines="1"
                android:maxLength="20"
                android:maxLines="1">

            </com.google.android.material.textfield.TextInputEditText>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="@string/register_pge_mail_hint"
            android:textColorHint="#878787"
            app:boxStrokeColor="@color/light_theme_green"
            app:endIconMode="clear_text"
            app:endIconTint="@color/light_theme_green"
            app:endIconTintMode="src_atop"
            app:hintTextColor="@color/light_theme_green">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/registerPgeMailTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress">

            </com.google.android.material.textfield.TextInputEditText>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="@string/register_pge_password_hint"
            android:textColorHint="#878787"
            app:boxStrokeColor="@color/light_theme_green"
            app:endIconMode="password_toggle"
            app:endIconTint="@color/light_theme_green"
            app:endIconTintMode="src_atop"
            app:hintTextColor="@color/light_theme_green">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/registerPgePasswordTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:lines="1"
                android:maxLines="1">

            </com.google.android.material.textfield.TextInputEditText>

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/registerPgeRegisterBtn"
            android:layout_width="320dp"
            android:layout_height="62dp"
            android:layout_marginTop="12dp"
            android:text="@string/register_pge_register_btn"
            android:textColor="@color/white"
            app:backgroundTint="@color/medium_theme_green"
            app:cornerRadius="4dp"
            app:elevation="4dp">

        </com.google.android.material.button.MaterialButton>


        <ProgressBar
            android:id="@+id/registerPgeProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="6dp"
            android:visibility="invisible" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="18dp"
        android:gravity="right"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingEnd="34dp"
        android:paddingBottom="10dp"
        tools:ignore="RtlHardcoded,RtlSymmetry">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/register_pge_to_login_lbl"
            android:textColor="#8C8C8C" />

        <ImageButton
            android:id="@+id/registerPgeArrowBtn"
            style="@style/ForArrowTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="6dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:elevation="8dp"
            android:src="@drawable/arrow_icon" />


    </LinearLayout>


</RelativeLayout>
