<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activities.NoticeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="20dp"
            android:paddingEnd="18dp"
            android:paddingBottom="6dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/noticePgeTitleTxt"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="6dp"
                android:fontFamily="@font/cabin_medium"
                android:inputType="textMultiLine"
                android:text="@string/notice_pge_title_txt"
                android:textColor="@color/medium_theme_green"
                android:textSize="46sp" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/noticePgeCloseCardView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_margin="10dp"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="@color/black"
                app:cardCornerRadius="50dp"
                app:cardElevation="8dp"
                app:rippleColor="@color/white">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baseline_close_24" />

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="24dp"
            android:paddingEnd="18dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/noticePgePostedByTxt"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:background="@color/black"
                android:gravity="center"
                android:paddingStart="10dp"
                android:paddingTop="2dp"
                android:paddingEnd="10dp"
                android:paddingBottom="2dp"
                android:text="@string/notice_pge_uploader_txt"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/noticePgePostedOnTxt"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_marginStart="8dp"
                android:gravity="center"
                android:paddingStart="10dp"
                android:paddingTop="2dp"
                android:paddingEnd="10dp"
                android:paddingBottom="2dp"
                android:text="@string/notice_pge_posted_on_txt"
                android:textColor="@color/black"
                android:textSize="12sp" />


        </LinearLayout>

        <ProgressBar
            android:id="@+id/noticePgeProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp"
            android:visibility="gone">

        </ProgressBar>

    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:fadeScrollbars="false"
        android:scrollIndicators="right"
        android:scrollbarSize="4dp"
        android:scrollbarThumbVertical="@android:color/darker_gray"
        android:scrollbars="vertical"
        android:verticalScrollbarPosition="right">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingBottom="12dp">


            <ImageView
                android:id="@+id/noticePgeImageView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="18dp"
                android:cropToPadding="true"
                android:scaleType="centerCrop"
                android:src="@drawable/notice_pic">

            </ImageView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="20dp"
                android:paddingTop="2dp"
                android:paddingEnd="18dp">


                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/noticePgeBodyTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="22dp"
                    android:layout_marginEnd="6dp"
                    android:layout_marginBottom="12dp"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:fontFamily="sans-serif-light"
                    android:justificationMode="inter_word"
                    android:lineSpacingExtra="4sp"
                    android:paddingEnd="2dp"
                    android:text="@string/notice_pge_body_txt"
                    android:textColor="@color/text_02"
                    android:textIsSelectable="false"
                    android:textSize="16sp" />

                <LinearLayout
                    android:id="@+id/noticePgeUrgencyStatusLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="2dp"
                    android:orientation="horizontal"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:visibility="visible"
                    android:weightSum="100">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="20"
                        android:text="@string/notice_pge_urgency_lbl"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/noticePgeUrgencyStatusTxt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="80"
                        android:inputType="text"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"
                        android:text="@string/notice_pge_urgency_txt"
                        android:textColor="@color/text_02"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/noticePgeLinkStatusLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="2dp"
                    android:orientation="horizontal"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:visibility="visible"
                    android:weightSum="100">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="20"
                        android:text="@string/notice_pge_link_lbl"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/noticePgeLinkTxt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="80"
                        android:autoLink="all"
                        android:inputType="textUri|textMultiLine"
                        android:linksClickable="true"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"
                        android:text="@string/notice_pge_link_txt"
                        android:textColor="@color/text_02"
                        android:textColorLink="#94D064"
                        android:textSize="14sp" />

                </LinearLayout>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:layout_marginBottom="18dp"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center_horizontal"
                    android:text="@string/notice_pge_app_name_lbl"
                    android:textColor="@color/text_02"
                    android:textSize="14sp" />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>

