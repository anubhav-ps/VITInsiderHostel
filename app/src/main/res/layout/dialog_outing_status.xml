<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="260dp"
    android:layout_height="310dp"
    android:orientation="vertical"
    android:padding="6dp"
    app:cardBackgroundColor="#FFFFFF"
    app:cardCornerRadius="8dp"
    app:cardElevation="9dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="#B5E58F" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="18dp"
            android:orientation="horizontal"
            android:padding="2dp">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/dialogOutingDateText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="36dp"
                    android:layout_marginTop="2dp"
                    android:text="@string/dialog_outing_date_txt"
                    android:textColor="#B5E58F"
                    android:textSize="54sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                </com.google.android.material.textview.MaterialTextView>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/dialogOutingMonthText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="56dp"
                    android:text="@string/dialog_outing_month_txt"
                    android:textColor="#B5E58F"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/dialogOutingDateText">

                </com.google.android.material.textview.MaterialTextView>

                <ImageView
                    android:id="@+id/dialogOutingImage"
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/vacation"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:padding="2dp"
            android:paddingStart="6dp"
            android:weightSum="100">


            <com.google.android.material.textview.MaterialTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:paddingStart="20dp"
                android:text="@string/dialog_outing_status_lbl"
                android:textAlignment="viewStart"
                android:textColor="@color/text_02"
                android:textSize="14sp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/dialogOutingStatusTxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:paddingStart="10dp"
                android:text="@string/dialog_outing_status_txt"
                android:textColor="@color/text_02"
                android:textSize="14sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:orientation="horizontal"
            android:padding="2dp"
            android:paddingStart="6dp"
            android:weightSum="100">


            <com.google.android.material.textview.MaterialTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:paddingStart="20dp"
                android:text="@string/dialog_outing_from_lbl"
                android:textAlignment="viewStart"
                android:textColor="@color/text_02"
                android:textSize="14sp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/dialogOutingFromTxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="40"
                android:paddingStart="10dp"
                android:text="@string/dialog_outing_from_txt"
                android:textColor="@color/text_02"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:orientation="horizontal"
            android:padding="2dp"
            android:paddingStart="6dp"
            android:weightSum="100">


            <com.google.android.material.textview.MaterialTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:paddingStart="20dp"
                android:text="@string/dialog_outing_till_lbl"
                android:textAlignment="viewStart"
                android:textColor="@color/text_02"
                android:textSize="14sp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/dialogOutingTillTxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:paddingStart="10dp"
                android:text="@string/dialog_outing_till_txt"
                android:textColor="@color/text_02"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:orientation="horizontal"
            android:padding="2dp"
            android:paddingStart="6dp"
            android:weightSum="100">


            <com.google.android.material.textview.MaterialTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:paddingStart="20dp"
                android:text="@string/dialog_outing_duration_lbl"
                android:textAlignment="viewStart"
                android:textColor="@color/text_02"
                android:textSize="14sp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/dialogOutingDurationText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:paddingStart="10dp"
                android:text="@string/dialog_outing_duration_txt"
                android:textColor="@color/text_02"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>


</com.google.android.material.card.MaterialCardView>