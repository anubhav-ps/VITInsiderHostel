<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_fill_colour"
    android:id="@+id/userProfileActivity"
    tools:context=".activities.AccountMenuActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/accountMenuPgeToolBar"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:elevation="6dp"
        app:elevation="6dp">

        <ImageButton
            android:id="@+id/accountMenuPgeBackArrow"
            style="@style/ForArrowTheme"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="26dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:elevation="8dp"
            android:padding="2dp"
            android:src="@drawable/back_arrow_icon" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/accountMenuPgeToolBarTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/cabin_medium"
            android:gravity="center_vertical"
            android:padding="2dp"
            android:text="@string/user_profile_pge_toolbar_lbl"
            android:textColor="@color/medium_theme_green"
            android:textSize="24sp">

        </com.google.android.material.textview.MaterialTextView>

    </com.google.android.material.appbar.MaterialToolbar>


    <FrameLayout
        android:id="@+id/accountMenuPgeFragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/accountMenuPgeToolBar">

    </FrameLayout>

</RelativeLayout>