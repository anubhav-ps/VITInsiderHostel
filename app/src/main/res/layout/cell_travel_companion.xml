<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="6dp"
    android:layout_marginTop="1dp"
    android:layout_marginEnd="6dp"
    android:layout_marginBottom="8dp"
    android:background="#EBC4C4"
    android:orientation="vertical"
    app:cardCornerRadius="8dp"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:orientation="horizontal"
        android:paddingStart="6dp"
        android:paddingEnd="6dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="80"
            android:orientation="vertical"
            android:paddingStart="6dp"
            android:paddingEnd="4dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/cellTravelUserNameTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cabin_medium"
                android:text="anubhav_p_s"
                android:textColor="@color/text_01"
                android:textSize="22sp">

            </com.google.android.material.textview.MaterialTextView>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/cellTravelBranchTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif-light"
                android:inputType="textMultiLine"
                android:text="Electrical &amp; Electronics"
                android:textAlignment="viewStart"
                android:textColor="@color/text_01"
                android:textSize="15sp">

            </com.google.android.material.textview.MaterialTextView>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/cellTravelTopicTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif-light"
                android:inputType="textMultiLine"
                android:text="Topic : Dinner"
                android:textAlignment="viewStart"
                android:textColor="@color/text_01"
                android:textSize="15sp">

            </com.google.android.material.textview.MaterialTextView>

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/cellTravelPingBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:layout_weight="20"
            android:elevation="3dp"
            android:text="Ping"
            android:textColor="@color/white"
            app:backgroundTint="@color/black">

        </com.google.android.material.button.MaterialButton>


    </LinearLayout>

</com.google.android.material.card.MaterialCardView>