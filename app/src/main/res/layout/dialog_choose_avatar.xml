<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@drawable/dialog_choose_avatar_background"
    android:elevation="12dp"
    android:orientation="vertical">

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/cabin_medium"
        android:gravity="center_horizontal"
        android:text="Choose Avatar"
        android:textColor="@color/light_theme_green"
        android:textSize="28sp">

    </com.google.android.material.textview.MaterialTextView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@color/white"
        android:paddingStart="12dp"
        android:paddingTop="12dp"
        android:paddingEnd="12dp"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:weightSum="120">

                <LinearLayout
                    style="@style/SelectableItemBackground"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="6dp"
                    android:layout_weight="35"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:elevation="1dp"
                    android:focusable="true"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/avatar_2"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:scaleType="fitCenter"
                        android:src="@drawable/av_201" />

                </LinearLayout>

                <LinearLayout
                    style="@style/SelectableItemBackground"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="6dp"
                    android:layout_weight="35"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:elevation="1dp"
                    android:focusable="true"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/avatar_3"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:scaleType="fitCenter"
                        android:src="@drawable/av_202" />

                </LinearLayout>

                <LinearLayout
                    style="@style/SelectableItemBackground"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    android:layout_weight="35"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:elevation="1dp"
                    android:focusable="true"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/avatar_4"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:scaleType="fitCenter"
                        android:src="@drawable/av_203" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:weightSum="120">

                <LinearLayout
                    style="@style/SelectableItemBackground"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="6dp"
                    android:layout_weight="35"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:elevation="1dp"
                    android:focusable="true"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/avatar_5"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:scaleType="fitCenter"
                        android:src="@drawable/av_204" />

                </LinearLayout>

                <LinearLayout
                    style="@style/SelectableItemBackground"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="6dp"
                    android:layout_weight="35"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:elevation="1dp"
                    android:focusable="true"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/avatar_6"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:scaleType="fitCenter"
                        android:src="@drawable/av_205" />

                </LinearLayout>

                <LinearLayout
                    style="@style/SelectableItemBackground"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    android:layout_weight="35"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:elevation="1dp"
                    android:focusable="true"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/avatar_7"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:scaleType="fitCenter"
                        android:src="@drawable/av_206" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:weightSum="120">


                <LinearLayout
                    style="@style/SelectableItemBackground"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="6dp"
                    android:layout_weight="35"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:elevation="1dp"
                    android:focusable="true"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/avatar_8"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:scaleType="fitCenter"
                        android:src="@drawable/av_207" />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/dialogChooseAvatarApplyBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:rippleColor="#E0CCCC"
        android:backgroundTint="@color/black"
        android:text="APPLY"
        android:textColor="@color/white"
        app:cornerRadius="4dp">

    </com.google.android.material.button.MaterialButton>

</LinearLayout>