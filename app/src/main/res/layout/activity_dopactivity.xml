<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activities.DOPActivity">

    <LinearLayout
        android:id="@+id/dopActivityToolbarLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/white"
        android:elevation="4dp"
        android:orientation="horizontal"
        app:elevation="4dp">

        <ImageButton
            android:id="@+id/dopActivityBackArrow"
            style="@style/ForArrowTheme"
            android:layout_marginStart="20dp"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_baseline_arrow_back_24"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="12dp"
            android:fontFamily="sans-serif"
            android:textColor="@color/text_04"
            android:text="Digital Outing Passport"
            android:textSize="22sp">

        </com.google.android.material.textview.MaterialTextView>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/dopActivityLoadingLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingTop="10dp"

        android:paddingBottom="10dp">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:fontFamily="sans-serif-light"
            android:paddingStart="10dp"
            android:text="Loading.."
            android:textColor="@color/text_04"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/dopActivityProgressBar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp" />


    </LinearLayout>

    <ScrollView
        android:id="@+id/dopActivityScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

        <LinearLayout
            android:id="@+id/dopActivityCardLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:orientation="vertical">


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/dopCardView"
                android:layout_width="340dp"
                android:layout_height="660dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="#A1E1EB"
                app:cardCornerRadius="24dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/open_sans_semibold"
                        android:paddingStart="28dp"
                        android:text="Digital Outing"
                        android:textColor="#FFFFFF"
                        android:textSize="32sp">

                    </com.google.android.material.textview.MaterialTextView>


                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/open_sans_semibold"
                        android:paddingStart="28dp"
                        android:text="Passport"
                        android:textColor="@color/white"
                        android:textSize="32sp">

                    </com.google.android.material.textview.MaterialTextView>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/dopCardIssuedOnTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:fontFamily="sans-serif-light"
                        android:paddingStart="30dp"
                        android:text="Issued On : 5 JUN 2022, 12:35"
                        android:textColor="@color/text_02"
                        android:textSize="14sp">

                    </com.google.android.material.textview.MaterialTextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:weightSum="110">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="6dp"
                            android:layout_weight="30"
                            android:background="@color/white" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/dopCardValidityStatusTxt"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="50"
                            android:fontFamily="sans-serif"
                            android:gravity="center_horizontal"
                            android:text="EXPIRED"
                            android:textColor="#57A1BC"
                            android:textSize="24sp">

                        </com.google.android.material.textview.MaterialTextView>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="6dp"
                            android:layout_weight="30"
                            android:background="@color/white" />


                    </LinearLayout>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:fontFamily="sans-serif-light"
                        android:paddingStart="30dp"
                        android:text="Register Number"
                        android:textColor="@color/text_04"
                        android:textSize="14sp">

                    </com.google.android.material.textview.MaterialTextView>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/dopCardRegisterNumberTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:paddingStart="30dp"
                        android:text="19BEE1144"
                        android:textColor="@color/text_04"
                        android:textSize="22sp">

                    </com.google.android.material.textview.MaterialTextView>


                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="sans-serif-light"
                        android:paddingStart="30dp"
                        android:text="Student Name"
                        android:textColor="@color/text_04"
                        android:textSize="14sp">

                    </com.google.android.material.textview.MaterialTextView>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/dopCardStudentNameTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:paddingStart="30dp"
                        android:text="Anubhav.P.S"
                        android:textColor="@color/text_04"
                        android:textSize="22sp">

                    </com.google.android.material.textview.MaterialTextView>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="sans-serif-light"
                        android:paddingStart="30dp"
                        android:text="Visit Date"
                        android:textColor="@color/text_04"
                        android:textSize="14sp">

                    </com.google.android.material.textview.MaterialTextView>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/dopCardVisitDateTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:paddingStart="30dp"
                        android:text="06-06-2022"
                        android:textColor="@color/text_04"
                        android:textSize="22sp">

                    </com.google.android.material.textview.MaterialTextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:weightSum="100">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="4dp"
                            android:layout_weight="5"
                            android:background="@color/white" />


                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="36"
                            android:fontFamily="sans-serif"
                            android:gravity="start"
                            android:paddingStart="8dp"
                            android:paddingEnd="4dp"
                            android:text="Check Out"
                            android:textColor="#57A1BC"
                            android:textSize="24sp">

                        </com.google.android.material.textview.MaterialTextView>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="4dp"
                            android:layout_weight="59"
                            android:background="@color/white" />


                    </LinearLayout>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="sans-serif-light"
                        android:paddingStart="30dp"
                        android:text="Campus Check Out"
                        android:textColor="@color/text_04"
                        android:textSize="14sp">

                    </com.google.android.material.textview.MaterialTextView>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/dopCardCheckOutTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="sans-serif-light"
                        android:paddingStart="30dp"
                        android:text="10:00"
                        android:textColor="@color/text_04"
                        android:textSize="16sp">

                    </com.google.android.material.textview.MaterialTextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:paddingStart="30dp"
                            android:text="Checked out at"
                            android:textColor="@color/text_04"
                            android:textSize="16sp">

                        </com.google.android.material.textview.MaterialTextView>

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/dopCardCheckedOutAtTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:paddingStart="30dp"
                            android:text="10:20:39"
                            android:textColor="@color/text_04"
                            android:textSize="16sp">

                        </com.google.android.material.textview.MaterialTextView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:weightSum="100">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="4dp"
                            android:layout_weight="5"
                            android:background="@color/white" />


                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="32"
                            android:fontFamily="sans-serif"
                            android:gravity="start"
                            android:paddingStart="8dp"
                            android:paddingEnd="4dp"
                            android:text="Check In"
                            android:textColor="#57A1BC"
                            android:textSize="24sp">

                        </com.google.android.material.textview.MaterialTextView>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="4dp"
                            android:layout_weight="63"
                            android:background="@color/white" />


                    </LinearLayout>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="sans-serif-light"
                        android:paddingStart="30dp"
                        android:text="Campus Check In"
                        android:textColor="@color/text_04"
                        android:textSize="14sp">

                    </com.google.android.material.textview.MaterialTextView>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/dopCardCheckInTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="sans-serif-light"
                        android:paddingStart="30dp"
                        android:text="18:00"
                        android:textColor="@color/text_04"
                        android:textSize="16sp">

                    </com.google.android.material.textview.MaterialTextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:paddingStart="30dp"
                            android:text="Checked in at"
                            android:textColor="@color/text_04"
                            android:textSize="16sp">

                        </com.google.android.material.textview.MaterialTextView>

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/dopCardCheckedInAtTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:paddingStart="30dp"
                            android:text="17:37:12"
                            android:textColor="@color/text_04"
                            android:textSize="16sp">

                        </com.google.android.material.textview.MaterialTextView>

                    </LinearLayout>


                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="sans-serif"
                android:gravity="center_horizontal"
                android:text="Insider Hostel"
                android:textColor="@color/text_04"
                android:textSize="14sp">

            </com.google.android.material.textview.MaterialTextView>


        </LinearLayout>


    </ScrollView>

</LinearLayout>