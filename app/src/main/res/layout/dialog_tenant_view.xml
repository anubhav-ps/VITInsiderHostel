<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ViewTenantDialog">

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/harmattan"
        android:gravity="center_horizontal"
        android:text="@string/tenant_dialog_detail_txt"
        android:textColor="@color/medium_theme_green"
        android:textSize="34sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="40dp"
        android:paddingTop="12dp"
        android:paddingEnd="40dp"
        android:paddingBottom="24dp">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/duru_sans"
            android:padding="2dp"
            android:text="@string/user_profile_pge_username_lbl"
            android:textColor="#E6626161" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/dialogTenantName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:padding="2dp"
            android:text="@string/user_profile_pge_username_txt"
            android:textColor="#E6626161"
            android:textSize="14sp">

        </com.google.android.material.textview.MaterialTextView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/darker_gray" />


        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/duru_sans"
            android:padding="2dp"
            android:text="@string/user_profile_pge_user_mail_id_lbl"
            android:textColor="#E6626161" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:weightSum="100">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/dialogTenantMail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_weight="90"
                android:fontFamily="sans-serif"
                android:padding="2dp"
                android:text="@string/user_profile_pge_user_mail_id_txt"
                android:textColor="#E6626161"
                android:textSize="14sp">

            </com.google.android.material.textview.MaterialTextView>

            <ImageView
                android:id="@+id/dialogTenantMailCopyIcon"
                style="@style/SelectableItemBackground"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:padding="2dp"
                android:src="@drawable/ic_baseline_content_copy_24" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/darker_gray" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/duru_sans"
            android:padding="2dp"
            android:text="@string/user_profile_pge_contact_number_lbl"
            android:textColor="#E6626161" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:weightSum="100">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/dialogTenantContactNum"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="90"
                android:fontFamily="sans-serif"
                android:padding="2dp"
                android:text="@string/user_profile_pge_contact_num_txt"
                android:textColor="#E6626161"
                android:textSize="14sp">

            </com.google.android.material.textview.MaterialTextView>

            <ImageView
                android:id="@+id/dialogTenantContactIcon"
                style="@style/SelectableItemBackground"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:padding="2dp"
                android:src="@drawable/ic_baseline_call_24" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/darker_gray" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/duru_sans"
            android:padding="2dp"
            android:text="@string/user_profile_pge_native_language_lbl"
            android:textColor="#E6626161" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/dialogTenantNativeLanguage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:padding="2dp"
            android:text="@string/user_profile_pge_native_language_txt"
            android:textColor="#E6626161"
            android:textSize="14sp">

        </com.google.android.material.textview.MaterialTextView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/darker_gray" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/duru_sans"
            android:padding="2dp"
            android:text="@string/user_profile_pge_branch_lbl"
            android:textColor="#E6626161" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/dialogTenantBranch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:padding="2dp"
            android:text="@string/user_profile_pge_branch_txt"
            android:textColor="#E6626161"
            android:textSize="14sp">

        </com.google.android.material.textview.MaterialTextView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/darker_gray" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="horizontal"
            android:padding="10dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/dialogTenantBackIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/light_theme_green"
                android:padding="14dp"
                android:text="@string/tenant_dialog_back_btn_txt"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:cornerRadius="50dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>