<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="380dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="10dp"
    app:cardElevation="6dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="6dp"
            android:text="Branch"
            android:textColor="@color/medium_theme_green"
            android:textSize="18sp" />


        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:hint="Pick your Branch"
            android:textColorHint="#878787"
            android:visibility="visible"
            app:boxBackgroundColor="#EEEEEE"
            app:boxStrokeColor="@color/light_theme_green"
            app:endIconTint="@color/light_theme_green"
            app:endIconTintMode="src_atop"
            app:hintTextColor="@color/light_theme_green">

            <AutoCompleteTextView
                android:id="@+id/editBranchViewEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#EEEEEE"
                android:gravity="center_vertical"
                android:inputType="none"
                tools:ignore="LabelFor">

            </AutoCompleteTextView>

        </com.google.android.material.textfield.TextInputLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <ImageButton
                android:id="@+id/editBranchViewCancelBtn"
                style="@style/cancelTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="32dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:elevation="8dp"
                android:src="@drawable/ic_baseline_close_24" />

            <ImageButton
                android:id="@+id/editBranchViewSaveBtn"
                style="@style/ForArrowTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:elevation="8dp"
                android:src="@drawable/ic_baseline_done_24" />


        </LinearLayout>


    </LinearLayout>

</com.google.android.material.card.MaterialCardView>