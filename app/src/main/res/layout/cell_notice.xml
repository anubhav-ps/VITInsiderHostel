<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cellNoticeCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:longClickable="true"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="6dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true"
    app:rippleColor="#1B303030">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingTop="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="4dp">


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/cellNoticeTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:fontFamily="sans-serif-medium"
            android:maxLines="2"
            android:text="@string/cell_notice_title_txt"
            android:textColor="@color/medium_theme_green"
            android:textSize="24sp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/cellNoticePostedOn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:fontFamily="sans-serif-light"
            android:text="@string/cell_notice_posted_on_txt"
            android:textColor="#7F7F7F"
            android:textSize="10sp" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/cellNoticeShortDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="sans-serif-light"
            android:maxLength="300"
            android:text="@string/cell_notice_body_txt"
            android:textColor="#7F7F7F"
            android:textSize="14sp" />

        <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
            android:id="@+id/noticeSliderIndicator"
            android:layout_width="wrap_content"
            android:layout_height="4dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="14dp"
            android:visibility="visible"
            app:dotsColor="@color/light_theme_green"
            app:dotsCornerRadius="8dp"
            app:dotsSize="12dp"
            app:dotsSpacing="5dp"
            app:progressMode="true"
            app:selectedDotColor="@color/dark_theme_green" />

    </LinearLayout>


</com.google.android.material.card.MaterialCardView>